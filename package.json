{
  "name": "snp-chrome-ext",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "SNP real estate listing parser Chrome extension (MV3)",
  "scripts": {
    "build": "node scripts/build.mjs",
    "watch": "node scripts/build.mjs --watch",
    "clean": "node -e \"import('fs').then(fs=>fs.rmSync('dist',{recursive:true,force:true}))\"",
    "zip": "cd dist && zip -r ../snp-chrome-ext.zip .",
    "generate-icons": "node scripts/generate-icons.mjs"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.14",
    "@types/chrome": "^0.0.260",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.21.5",
    "esbuild-plugin-inline-import": "^1.1.0",
    "postcss": "^8.5.6",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "preact": "^10.27.2"
  }
}
